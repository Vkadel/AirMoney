<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/my_child_ledgername_layout">

    <TextView
        android:id="@+id/child_ledger_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/child_ledger_padding"
        android:text="@string/MyName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="2"
            android:id="@+id/child_ledger_total_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/child_ledger_padding"
            android:text="@string/this_child_has_this_much" />

        <TextView
            android:id="@+id/currency_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/child_ledger_padding"
            android:text="@string/currency" />

        <TextView
            android:layout_weight="2"
            android:id="@+id/child_ledger_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/child_ledger_padding"
            android:text="00" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blackColor" />
</LinearLayout>